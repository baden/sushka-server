{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ]
    ],
    "plugins": [
        [
            "@babel/plugin-proposal-decorators",
            {
                "legacy": true
            }
        ],
        [
            "@babel/plugin-proposal-class-properties",
            {
                "loose": true
            }
        ],
        [
            "babel-plugin-transform-builtin-classes",
            {
                "globals": [
                    "Array",
                    "Error",
                    "HTMLElement"
                ]
            }
        ],
        [
            "template-html-minifier",
            {
                "modules": {
                    "lit-html": [
                        "html"
                    ],
                    "lit-element": [
                        "html",
                        {
                            "name": "css",
                            "encapsulation": "style"
                        }
                    ]
                },
                "strictCSS": true,
                "htmlMinifier": {
                    "collapseWhitespace": true,
                    "conservativeCollapse": true,
                    "removeComments": true,
                    "caseSensitive": true,
                    "minifyCSS": true
                }
            }
        ]
    ]
}
